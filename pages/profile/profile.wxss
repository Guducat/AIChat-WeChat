/* pages/profile/profile.wxss */
.profile-container {
  padding: 0 16px 100px;
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-section {
  background: var(--primary-gradient);
  border-radius: 16px;
  padding: 24px;
  margin: 16px 0 24px;
  color: white;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.avatar {
  width: 60px;
  height: 60px;
  border-radius: 30px;
  margin-right: 16px;
  border: 3px solid rgba(255,255,255,0.3);
}

.user-details {
  flex: 1;
}

.nickname {
  display: block;
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 4px;
}

.login-status {
  display: block;
  font-size: 12px;
  opacity: 0.8;
}

.login-action {
  margin-left: 12px;
}

.login-btn {
  background: rgba(255,255,255,0.2) !important;
  border-color: rgba(255,255,255,0.3) !important;
  color: white !important;
  min-width: 60px !important;
}

.logout-btn {
  background: rgba(255,255,255,0.1) !important;
  border-color: rgba(255,255,255,0.2) !important;
  color: rgba(255,255,255,0.8) !important;
  min-width: 60px !important;
}

.statistics {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: rgba(255,255,255,0.1);
  border-radius: 12px;
  padding: 16px;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-value {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 4px;
}

.stat-label {
  font-size: 12px;
  opacity: 0.8;
}

.stat-divider {
  width: 1px;
  height: 30px;
  background: rgba(255,255,255,0.2);
  margin: 0 16px;
}

/* 设置区域 */
.api-section,
.settings-section,
.function-section,
.data-section {
  margin-bottom: 24px;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 12px;
  padding-left: 4px;
}

/* 危险操作文本 */
.danger-text {
  color: #ff4444 !important;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 20px;
  margin-top: 20px;
}

.version-text {
  display: block;
  font-size: 14px;
  color: #666;
  margin-bottom: 4px;
}

.copyright {
  display: block;
  font-size: 12px;
  color: #999;
}

/* 主题选择弹窗 */
.theme-selector {
  padding: 0 0 20px;
}

.selector-header {
  padding: 20px 16px 16px;
  text-align: center;
  border-bottom: 1px solid #eee;
}

.selector-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.theme-list {
  padding: 16px;
}

.theme-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px;
  margin-bottom: 8px;
  background: #f8f9fa;
  border-radius: 12px;
  border: 2px solid transparent;
  transition: all 0.3s ease;
}

.theme-item.selected {
  background: var(--primary-color-light);
  border-color: var(--primary-color);
}

.theme-item:active {
  transform: scale(0.98);
}

.theme-label {
  font-size: 16px;
  color: #333;
}

/* API Key配置对话框 */
.api-key-dialog {
  background: white;
  border-radius: 20px;
  overflow: hidden;
  position: relative;
}

/* 对话框头部 */
.dialog-header {
  padding: 32px 24px 28px;
  text-align: center;
  background: linear-gradient(135deg, #1296DB 0%, #0d7bc7 100%);
  color: white;
  position: relative;
}

.header-icon {
  margin-bottom: 12px;
  opacity: 0.9;
}

.dialog-title {
  display: block;
  font-size: 20px;
  font-weight: 600;
  color: white;
  margin-bottom: 8px;
  letter-spacing: 0.5px;
}

.dialog-subtitle {
  display: block;
  font-size: 14px;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.4;
  font-weight: 400;
}

/* 对话框内容 */
.dialog-content {
  padding: 28px 24px 20px;
  background: white;
}

/* 输入区域 */
.input-section {
  margin-bottom: 24px;
}

.api-key-field {
  background: #f8f9fa !important;
  border-radius: 16px !important;
  border: 1px solid #e8e8e8 !important;
  transition: all 0.3s ease !important;
  overflow: hidden !important;
}

.api-key-field:focus-within {
  border-color: #1296DB !important;
  background: white !important;
  box-shadow: 0 0 0 3px rgba(18, 150, 219, 0.1) !important;
}

.api-key-input-inner {
  font-size: 15px !important;
  color: #333 !important;
  padding: 16px 20px !important;
  line-height: 1.4 !important;
}

/* 提示信息区域 */
.tips-section {
  margin-top: 20px;
}

.security-notice {
  border-radius: 12px !important;
  border: 1px solid rgba(18, 150, 219, 0.2) !important;
  margin-bottom: 16px !important;
}

.help-tip {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  background: #fafbfc;
  border-radius: 12px;
  border: 1px solid #f0f0f0;
}

.help-text {
  font-size: 14px;
  color: #666;
  margin-left: 8px;
  flex: 1;
}

.help-link {
  font-size: 14px;
  color: #1296DB;
  font-weight: 500;
  text-decoration: none;
}

/* 对话框操作区域 */
.dialog-actions {
  padding: 20px 24px 28px;
  background: #fafbfc;
  border-top: 1px solid #f0f0f0;
}

.action-buttons {
  align-items: center !important;
  display: flex;
  gap: 12px;
  margin-bottom: 16px;
}
.action-buttons > van-button { 
  flex: 1;
  justify-content: space-between;
  min-width: 80px;
}

.action-btn {
  flex: 1 !important;
  height: 50px !important;
  font-size: 16px !important;
  font-weight: 500 !important;
  transition: all 0.3s ease !important;
  border-radius: 25px !important;
}

.cancel-btn {
  background: white !important;
  border: 1px solid #e0e0e0 !important;
  color: #666 !important;
}

.cancel-btn:active {
  background: #f8f9fa !important;
  transform: scale(0.98) !important;
}

.save-btn {
  background: linear-gradient(135deg, #1296DB 0%, #0d7bc7 100%) !important;
  border: none !important;
  color: white !important;
  box-shadow: 0 6px 16px rgba(18, 150, 219, 0.3) !important;
}

.save-btn:active {
  transform: translateY(1px) scale(0.98) !important;
  box-shadow: 0 3px 12px rgba(18, 150, 219, 0.4) !important;
}

/* 危险操作区域 */
.danger-action {
  display: flex;
  justify-content: center;
}
.danger-action > van-button { 
  justify-content: space-between;
  min-width: 120px;
}

.clear-btn {
  width: 100% !important;
  height: 44px !important;
  font-size: 15px !important;
  font-weight: 400 !important;
  border: 1px solid #ff4757 !important;
  color: #ff4757 !important;
  background: white !important;
  border-radius: 22px !important;
}

.clear-btn:active {
  background: #fff5f5 !important;
  transform: scale(0.98) !important;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .dialog-header {
    padding: 28px 20px 24px;
  }

  .dialog-title {
    font-size: 18px;
  }

  .dialog-content {
    padding: 24px 20px 16px;
  }

  .dialog-actions {
    padding: 16px 20px 24px;
  }

  .action-buttons {
    margin-bottom: 12px;
  }

  .action-btn {
    height: 46px !important;
    font-size: 15px !important;
  }

  .clear-btn {
    height: 42px !important;
    font-size: 14px !important;
  }

  .api-key-input-inner {
    padding: 14px 16px !important;
    font-size: 14px !important;
  }
}

/* 超小屏幕适配 */
@media (max-width: 320px) {
  .dialog-header {
    padding: 24px 16px 20px;
  }

  .dialog-content {
    padding: 20px 16px 12px;
  }

  .dialog-actions {
    padding: 12px 16px 20px;
  }

  .action-buttons {
    flex-direction: column;
    gap: 8px;
  }

  .action-btn {
    width: 100% !important;
  }
}